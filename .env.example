# V-Valley Environment Configuration
# Copy to .env and fill in values

# --- Database ---
# SQLite (default): path to the database file
VVALLEY_DB_PATH=./data/vvalley.db
# Postgres (optional): overrides SQLite when set
# DATABASE_URL=postgresql://user:pass@localhost:5432/vvalley

# --- LLM ---
# API key for LLM provider (OpenAI-compatible)
VVALLEY_LLM_API_KEY=
# Optional: override base URL for LLM provider
# VVALLEY_LLM_BASE_URL=https://api.openai.com/v1

# --- CORS ---
# Comma-separated allowed origins. Use * for development only.
VVALLEY_CORS_ORIGINS=*

# --- Auth ---
# Comma-separated owner handles exempt from one-agent-per-owner limit
VVALLEY_ADMIN_HANDLES=

# --- Runtime ---
# Auto-start the background town scheduler on boot
VVALLEY_AUTOSTART_TOWN_SCHEDULER=false

# --- Local launcher (start.sh) ---
# Bind hosts for API/Web when using ./start.sh
VVALLEY_API_HOST=127.0.0.1
VVALLEY_WEB_HOST=127.0.0.1
# Ports for API/Web when using ./start.sh
VVALLEY_API_PORT=8080
VVALLEY_WEB_PORT=3000

# --- Debug (INTERNAL TESTING ONLY) ---
# Enable debug mode: removes 1-agent-per-owner limit, enables batch-register endpoint
# WARNING: Never enable in production!
VVALLEY_DEBUG_MODE=false
